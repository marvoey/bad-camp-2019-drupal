{% set banner =  row._entity.field_banner %}
{% if fields.name %}
    <h3><strong>{{ fields.name.content }}</strong></h3>
{% endif %}
{% if banner is not empty %}
<div class="owl-carousel boxed-banner-carosel owl-theme" data-plugin-options='{"items":1}'>
    {% for value in banner %}
    <div class="boxed-banner">
        <img src="{{ file_url(value.entity.fileuri) }}" alt="Banner">
    </div>
    {% endfor %}
</div>
{% endif %}
